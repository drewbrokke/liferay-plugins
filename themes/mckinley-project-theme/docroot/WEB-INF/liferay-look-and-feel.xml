<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 6.2.0//EN"
"http://www.liferay.com/dtd/liferay-look-and-feel_6_2_0.dtd">

<look-and-feel>
	<compatibility>
		<version>6.2.0+</version>
	</compatibility>
	<theme id="mckinley-project" name="McKinley Project">
		<settings>
			<setting configurable="true" key="portlet-setup-show-borders-default" type="checkbox" value="false" />
			<setting configurable="true" key="site-description" type="textarea" value="This is a site called McKinley Project" />
			<setting configurable="true" key="display-site-description" type="checkbox" value="true" />
		</settings>
		<layout-templates>
			<custom>
				<layout-template id="columns_1_3" name="1-3 Columns Layout">
					<template-path>/layouttpl/custom/columns-1-3-layouttpl/columns_1_3.tpl</template-path>
					<wap-template-path>/layouttpl/custom/columns-1-3-layouttpl/columns_1_3.wap.tpl</wap-template-path>
					<thumbnail-path>/layouttpl/custom/columns-1-3-layouttpl/columns_1_3.png</thumbnail-path>
				</layout-template>
			</custom>
		</layout-templates>
	</theme>
</look-and-feel>